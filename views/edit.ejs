<%- include('./partials/headers.ejs')%>
<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Update Student</h2>

      <!-- Update Or Edit Table Data -->
      <form
        method="post"
        action="/student/update/<%= data._id%>"
        class="d-inline"
      >
        <!-- Name Field -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= data.name %>"
          />
        </div>

        <!-- Age Field -->
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input
            type="text"
            class="form-control"
            id="age"
            name="age"
            value="<%= data.age %>"
          />
        </div>

        <!-- fees Field -->
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input
            type="text"
            class="form-control"
            id="fees"
            name="fees"
            value="<%= data.fees %>"
          />
        </div>
        <!-- Update Button -->
        <button type="submit" class="btn btn-warning">Update</button>
      </form>

      <!-- Go Back Button -->
      <form action="/student" method="get" class="d-inline">
        <button type="submit" class="btn btn-secondary">Back To Home</button>
      </form>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs')%>
