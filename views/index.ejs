<%- include('./partials/headers.ejs')%>
<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add New Student</h2>
      <form method="post">
        <!-- Name Field -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>

        <!-- Age Field -->
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>

        <!-- fees Field -->
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" class="form-control" id="fees" name="fees" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Student</h2>

      <!-- Show All Data -->
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Create Tabala Data -->
          <% var i = 1 %> <% data.forEach((item)=>{%>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fees %></td>
            <td>
              <!-- Update Tabala Data -->
              <form
                action="/student/edit/<%= item._id%>"
                method="get"
                class="d-inline"
              >
                <button type="submit" class="btn">
                  <i class="fa-solid fa-pen"></i>
                </button>
              </form>

              <!-- Delete Tabala Data -->
              <form
                action="/student/delete/<%= item._id%>"
                method="post"
                class="d-inline"
              >
                <button type="submit" class="btn">
                  <i class="fa-solid fa-trash text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs')%>
