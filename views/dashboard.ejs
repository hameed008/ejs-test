<%- include('./partials/headers.ejs')%>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand app-name" href="#">CRUD APP</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse menu" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link fs-4" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-4 dashboard" href="/student">Dashboard</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 mt-5">
        <h2 class="alert alert-success text-center">Add New Student</h2>
        <form method="post">
          <!-- Name Field -->
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" />
          </div>

          <!-- Age Field -->
          <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="text" class="form-control" id="age" name="age" />
          </div>

          <!-- fees Field -->
          <div class="mb-3">
            <label for="fees" class="form-label">Fees</label>
            <input type="text" class="form-control" id="fees" name="fees" />
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

      <div class="col-sm-6 mt-5">
        <h2 class="alert alert-danger text-center">List of Student</h2>

        <!-- Show All Data -->
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Age</th>
              <th scope="col">Fees</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- Create Tabala Data -->
            <% var i=1 %>
              <% data.forEach((item)=>{%>
                <tr>
                  <td>
                    <%= i++ %>
                  </td>
                  <td>
                    <%= item.name %>
                  </td>
                  <td>
                    <%= item.age %>
                  </td>
                  <td>
                    <%= item.fees %>
                  </td>
                  <td>
                    <!-- Update Tabala Data -->
                    <form action="/student/edit/<%= item._id%>" method="get" class="d-inline">
                      <button type="submit" class="btn">
                        <i class="fa-solid fa-pen"></i>
                      </button>
                    </form>

                    <!-- Delete Tabala Data -->
                    <form action="/student/delete/<%= item._id%>" method="post" class="d-inline">
                      <button type="submit" class="btn">
                        <i class="fa-solid fa-trash text-danger"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% })%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- include('./partials/footer.ejs')%>